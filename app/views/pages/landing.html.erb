 <% provide(:title, 'Home') %>
 <% if notice %>
 <p class="alert alert-success"><%= notice %></p>
 <% end %>
 <% if alert %>
 <p class="alert alert-danger"><%= alert %></p>
 <% end %>
 <div class="card">
 	<h3 class="card-header"><i class="fa fa-plane" aria-hidden="true"></i> Flight</h3>
 	<div class="card-block">
 		<label class="radio-lable">
 			<input id="round-trip-radio"  type="radio" name="optionsRadios" class="type-radio" checked="checked">Round-trip
 			<input id="one-way-radio" type="radio" name="optionsRadios" class="type-radio">One-way
 		</label>
 		<form method="post" action="/search" data-remote="true" class="form-horizontal">
 			<div class="form-group">
 				<label>From</label>
 				<select class="form-control" name="from"><option>Xi'an</option></select>
 				<label>To</label>
 				<select class="form-control" name="to"><option>Chengdu</option></select>
 			</div>
 			<div class="form-group">
 				<label>Departing</label>
 				<input type="text" class='form-control datepicker' name="departing_date" required>
 			</div>
 			<div class="form-group" id="returning">
 				<label>Returning</label>
 				<input type="text" class='form-control datepicker' name="returning_date" required>
 			</div>
 			<input type="submit" class="btn btn_search" name="">
 		</form>
 	</div>
 </div>
 <div id="search-results" class="card"></div>

